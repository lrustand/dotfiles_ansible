set from = "{{ email }}"
set realname = "{{ fullname }}"
# IMAP settings
set imap_user = "{{ email }}"
# SMTP settings
set smtp_url = "smtps://{{ email | regex_replace('@.*$','') }}@smtp.gmail.com"
# Remote Gmail folders
set folder = "imaps://imap.gmail.com/"
set spoolfile = "+INBOX"
set postponed = "+[Gmail]/Drafts"
set record = "+[Gmail]/Sent Mail"
set trash = "+[Gmail]/Trash"


set imap_authenticators="oauthbearer"
set imap_oauth_refresh_command="~/.mutt/oauth2.py --quiet --user={{ email }} --client_id={{ client_id }} --client_secret={{ client_secret }} --refresh_token={{ refresh_token }}"
set smtp_authenticators="oauthbearer"
set smtp_oauth_refresh_command="~/.mutt/oauth2.py --quiet --user={{ email }} --client_id={{ client_id }} --client_secret={{ client_secret }} --refresh_token={{ refresh_token }}"
